{
  "name": "contentor-api-user",
  "version": "1.0.0",
  "description": "Contentor - User API",
  "scripts": {
    "prepare": "husky install",
    "build": "webpack build",
    "compose": "docker-compose down --remove-orphans && docker-compose up --build --force-recreate",
    "compose:d": "npm run compose -- -d",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src\"",
    "lint": "eslint '*/**/*.{js,ts}' --fix",
    "test:v": "jest --passWithNoTests --runInBand --detectOpenHandles --verbose",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --silent --noStackTrace",
    "test:w": "npm run test -- --watch",
    "test:u": "npm run test -- -c jest.unit.config.ts",
    "test:i": "npm run test -- -c jest.integration.config.ts",
    "test:ci": "npm run test -- --coverage",
    "test:ci:u": "npm run test:u -- --coverage",
    "test:ci:i": "npm run test:i -- --coverage",
    "test:staged": "npm test -- --findRelatedTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leandroluk/contentor-api-user.git"
  },
  "keywords": [
    "user",
    "swagger",
    "express",
    "typeorm",
    "tsyringe",
    "solid",
    "ddd",
    "design-patterns"
  ],
  "author": {
    "email": "leandroluk@gmail.com",
    "name": "Leandro S. Gomes",
    "url": "https://github.com/leandroluk"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leandroluk/contentor-api-user/issues"
  },
  "homepage": "https://github.com/leandroluk/contentor-api-user#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@elastic/ecs-winston-format": "^1.3.1",
    "@elastic/elasticsearch": "^8.5.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "joi": "^17.7.0",
    "openapi-types": "^12.0.2",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.0",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  }
}